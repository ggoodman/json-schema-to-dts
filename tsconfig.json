{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "diagnostics": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "incremental": true,
    "lib": ["esnext"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noErrorTruncation": true,
    "outDir": "./dist",
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2018"
  },
  "include": ["src", "types", "old"]
}
